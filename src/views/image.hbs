<!--  BARRA TITULO-->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>{{ image.title }}</h2>
    <!--BOTON DELETE-->
    <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
      <i class="fa fa-times"></i> Delete
    </button>
  </div>
  <!--BARRA DESCRIPCION-->
  <div class="card-body">
    <p>{{ image.description }}</p>
    <div class="text-center">
      <!--IMAGEN CARGADA-->
      <img src="upload/{{image.filename}}" class="img-fluid">
    </div>
  </div>
  <!--  BARRA DELETE Y TITLE-->
  <div class="card-footer d-flex justify-content-between align-items-center">
     <!--DELETE BOTON-->
    <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
      <i class="fas fa-thumbs-up"></i> Like
    </button>
    <p>
       <!--LIKE-->
      <span class="likes-count">{{image.likes}}</span>
      <i class="fas fa-heart"></i>
    </p>
    <p>
       <!--VIEWS-->
      <i class="fas fa-eye"></i> {{image.views}}
    </p>
    <p>
       <!--TIME-->
      <i class="far fa-clock"></i>
      {{timeago image.timestamp}}
    </p>
  </div>
</div>

<!-- COMMENTS -->
<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Comments</h3>
    <button class="btn btn-info" id="btn-toggle-comment">
      <i class="fa fa-comments-o"></i> Post a Comment
    </button>
  </div>
  <!--DASHBOARD COMMENTS-->
  <div class="card-body">
    <blockquote id="post-comment">
            <!--IMAGE -->
      <form action="/images/{{ image.uniqueId }}/comment" method="POST">
        <div class="form-group">
          <!-- NAME-->
          <input type="text" class="form-control" name="name" placeholder="username">
        </div>
        <!--EMAIL-->
        <div class="form-group">
          <input type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <!--COMENTS-->
        <div class="form-group">
          <textarea name="comment" class="form-control" rows="2" placeholder="comentario.."></textarea>
        </div>
        <!--POST  COMENTS-->
        <div class="form-group">
          <button class="btn btn-success" id="btn-comment">
            <i class="fa fa-comment"></i> COMENTAR
          </button>
        </div>
      </form>      
    </blockquote>
    <!--LISTA COMENTAR-->
    <ul class="list-group p-4">
      {{#each comments}}
      <li class="list-group-item">
        <div class="row">
          <a href="#" class="col text-center">
                  <!--IMAGE PROFILEE-->
            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" />
          </a>
          <blockquote class="col">
            <p class="lead">{{comment}}</p>
            <!--FOOTER-->
            <footer class="blockquote-footer">
              {{name}}- {{timeago timestamp}}
            </footer>
          </blockquote>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
